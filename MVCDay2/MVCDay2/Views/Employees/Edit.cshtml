
@model Employee

@{
    ViewBag.Title = "Employees | Edit";
}

<br />
<br />

<h2>Edit Employee</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.Name,new { @class = "form-control" , @Value = Model.Name })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Value = Model.Email })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @Value = Model.Age })
                @Html.ValidationMessageFor(m => m.Age, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Salary">Salary</label>
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", @Value = Model.Salary })
                @Html.ValidationMessageFor(m => m.Salary, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Gender">Gender</label>
                @Html.EnumDropDownListFor(m => m.Gender, @Model.Gender.ToString(), new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @Value = Model.Address })
                @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })<br />
            </div>
            <input type="submit" value="Edit" class="btn btn-primary" />
            @Html.ActionLink("Back to list", "Index", "Employees", null, new { @class = "btn btn-light" })
        </form>
    </div>
</div>